version: '2'
networks:
  front:
<% if scope['nexus::front_network'] != :undef -%>
    external:
      name: <%= scope['nexus::front_network'] %>
<% end -%>
  smtp:
<% if scope['nexus::smtp_network'] != :undef -%>
    external:
      name: <%= scope['nexus::smtp_network'] %>
<% end -%>
services:
  nexus:
    image: <%= scope['nexus::image'] %>:<%= scope['nexus::version'] %>
    expose:
      - 8081
    ports:  
      - "<%= scope['nexus::smart_proxy_port'] %>:<%= scope['nexus::smart_proxy_port'] %>"
    environment:
      CONTEXT_PATH: "/"
      MAX_HEAP: <%= scope['nexus::heap'] %>
    volumes:
      - <%= scope['nexus::install_dir'] %>/conf/nexus.properties:/nexus-data/etc/nexus.properties:ro
      - <%= scope['nexus::data_dir'] %>:/nexus-data
      - <%= scope['nexus::log_dir'] %>:/nexus-data/log
    networks:
      front:
        aliases:
          - nexus
      smtp:
<% scope['nexus::container_labels'].each do |label| -%>
    labels:
<% scope['nexus::container_labels'].each do |label| -%>
      - "<%= label %>"
<% end -%>
<% end -%>
